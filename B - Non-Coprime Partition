#include<bits/stdc++.h>
using namespace std;
int main(){
long long a,b,n,i,j,k;
cin >> n;
if(n>2 && n%2!=0){
    cout << "Yes" << "\n";
    cout << n/2+1<< " ";
    for(i=1;i<=n;i=i+2)
       cout << i << " ";
       cout << "\n";
       cout << n-((n/2)+1) << " ";
    for(i=2;i<=n;i=i+2)
        cout << i << " ";
        cout << "\n";
}
else if(n>2 && n%2==0){
    cout << "Yes" << "\n";
    cout << n/2<< " ";
    for(i=1;i<=n;i=i+2)
       cout << i << " ";
       cout << "\n";
       cout << n-(n/2) << " ";
    for(i=2;i<=n;i=i+2)
        cout << i << " ";
        cout << "\n";
}
else
    cout << "No" << "\n";
}
