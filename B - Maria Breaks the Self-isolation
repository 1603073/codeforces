#include<bits/stdc++.h>
using namespace std;
int main(){
long int t,i,j=1,n,k,l=0,c=0,c1=0,m=1;
cin >> t;
for(k=1;k<=t;k++){
    cin >> n;
    long a[n];
    for(i=0;i<n;i++)
    cin >> a[i];
    sort(a,a+n);
    for(i=0;i<n;i++){
        if(i+1>=a[i])
          l = i+1;
     }
    cout << l+1 << "\n";
    l = 0;

}
}
