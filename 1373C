#include<bits/stdc++.h>
using namespace std;
int main(){
long long int t,i,j,k,l,cur=0,res=0;
cin >> t;
char s[1000000];
for(i=1;i<=t;i++){
    cin >> s;
    cur = 0;
    for(j=0;j<strlen(s);j++){
        if(s[j]=='+')
            cur = cur+1;
        else
            cur = cur-1;
        if(cur<0){
            res = res+1+j;
            cur++;
        }
    }
    cout << res+strlen(s) << "\n";
    res = 0;

}
}
