#include<bits/stdc++.h>
using namespace std;
int main(){
int n,m,i,j,k,c=0;
scanf("%d %d",&n,&m);
for(i=1;i<=n;i++){
    if(i%2!=0){
        for(j=1;j<=m;j++){
            printf("#");}
            printf("\n");
    }
    else if(i%2==0 && c==0){
        for(j=1;j<m;j++){
            printf(".");
        }
        printf("#");
        c=1;
        printf("\n");
    }
    else if(i%2==0 && c!=0){
        printf("#");
        for(j=1;j<m;j++){
        printf(".");}
        c=0;
        printf("\n");
    }
}
}
