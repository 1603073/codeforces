#include<bits/stdc++.h>
using namespace std;
int main(){
long n,a,b,c,i;
cin >> n;
if(n%2==0 && ((n/2>=2)||(n/2)<2)){
   cout << (n/2) << "\n";
   for(i=1;i<=n/2;i++)
      cout << 2 << ' ' ;
}
else if(n%2!=0){
  a = (n/2)-1;
  cout << n/2 << "\n";
  for(i=1;i<=n/2-1;i++)
      cout << 2 << ' ';
      cout << 3;
}
}
