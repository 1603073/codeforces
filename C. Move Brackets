#include<bits/stdc++.h>
using namespace std;
int main(){
long long int t,n,i,j,k,c=0,c1=0;
cin >> t;
char s[100];
for(i=1;i<=t;i++){
    cin >> n;
    cin >> s;
    for(j=0;j<n;j++){
       if(s[j]=='('){
        c++;
       }
       else{
        if(c>0)
        c--;
       }
    }
    cout << c << "\n";
    c = 0;
}
}
