#include<stdio.h>
int main()
{
    int n;
    int count = 0;
    scanf("%d",&n);
    int p[100],q[100];
    int i=0;
    for(i=0;i<n;i++)
    {
        scanf("%d",&p[i]);
        scanf("%d",&q[i]);
        if((q[i]-p[i])>2 || (q[i]-p[i])==2)
        {
            count++;
        }
        else if(p[i]==q[i])
        {
           ;
        }
    }
    printf("%d\n",count);
    return 0;
}
